<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="copose_title">Title</label>
        <input type="text" id="copose_title" class="form-control" name="postTitle" autofocus>
        <label for="post_content">Post</label>
        <textarea type="textarea" name="postBody" class="form-control" id="post_content" cols="45" rows="5"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

